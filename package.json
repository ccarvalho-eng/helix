{
	"type": "module",
	"scripts": {
		"prettier": "prettier --write \"assets/js/**/*.{js,ts,tsx}\"",
		"prettier:check": "prettier --check \"assets/js/**/*.{js,ts,tsx}\"",
		"lint": "eslint assets/js/features assets/js/shared assets/js/lib --ext .js,.jsx,.ts,.tsx",
		"lint:fix": "eslint assets/js/features assets/js/shared assets/js/lib --ext .js,.jsx,.ts,.tsx --fix",
		"typecheck": "tsc --noEmit",
		"check": "npm run prettier:check && npm run lint && npm run typecheck",
		"fix": "npm run prettier && npm run lint:fix && npm run typecheck",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:debug": "playwright test --debug",
		"test:e2e:headed": "playwright test --headed",
		"test:all": "npm run test && npm run test:e2e",
		"codegen": "graphql-codegen --config codegen.ts",
		"codegen:watch": "graphql-codegen --config codegen.ts --watch"
	},
	"dependencies": {
		"@apollo/client": "^4.0.5",
		"@types/react": "^19.1.12",
		"@types/react-dom": "^19.1.8",
		"graphql": "^16.11.0",
		"html-to-image": "^1.11.11",
		"lucide-react": "^0.542.0",
		"phoenix": "^1.7.14",
		"react": "^19.1.1",
		"react-dnd": "^16.0.1",
		"react-dnd-html5-backend": "^16.0.1",
		"react-dom": "^19.1.1",
		"reactflow": "^11.11.4"
	},
	"devDependencies": {
		"@babel/core": "^7.28.4",
		"@babel/preset-env": "^7.28.3",
		"@babel/preset-react": "^7.27.1",
		"@babel/preset-typescript": "^7.27.1",
		"@graphql-codegen/cli": "^6.0.0",
		"@graphql-codegen/typescript": "^5.0.0",
		"@graphql-codegen/typescript-operations": "^5.0.0",
		"@graphql-codegen/typescript-react-apollo": "^4.3.3",
		"@playwright/test": "^1.55.0",
		"@testing-library/jest-dom": "^6.8.0",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/jest": "^30.0.0",
		"@types/node": "^24.3.1",
		"@types/phoenix": "^1.6.6",
		"@typescript-eslint/eslint-plugin": "^8.18.0",
		"@typescript-eslint/parser": "^8.42.0",
		"babel-jest": "^30.1.2",
		"eslint": "^9.35.0",
		"jest": "^30.1.3",
		"jest-environment-jsdom": "^30.1.2",
		"prettier": "^3.6.2",
		"ts-jest": "^29.4.1",
		"typescript": "^5.6.0"
	}
}
